{% extends "loginpage.html.twig" %}

{% block other_link %}

{{ encore_entry_link_tags('login') }}

{% endblock %}

{% block header %}

{% endblock %}


{% block body %}
    



<div class="container-fluid principal">

    <div class="row justify-content-between">
        <div class="col-lg-4 col-md-4 d-lg-block d-md-block d-sm-none d-none">
            <img src="{{ asset('images/white-wine.png') }}" class="img-bottle">
        </div>
        <div class="col-lg-4 col-md-4 col-sm-10">

            <div class="connexion">
                    <div class="container-fluid">
                        <div class="row justify-content-between">
                            <div class="col-3"><a href="/valid_code">Retour</a></div>
                            <div class="col-3"><a href="/">Gnol@</a></div>
                        </div>

                            {% block login_option %}

                                <div class="row pt-5">
                                    <div class="col-12">
                                        <p class="title">Réinitialisation du mot de passe</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="mb-3 mdp">
                                            <label for="mdp" class="form-label">Mot de passe</label>
                                            <input type="password" class="form-control" id="mdp" placeholder="Saisir nouveau mot de passe">
                                        </div>

                                        <div class="mb-3 conf-mdp">
                                            <label for="conf-mdp" class="form-label">Confirmation mot de passe</label>
                                            <input type="password" class="form-control" id="conf-mdp" placeholder="Saisir à nouveau">
                                        </div>

                                        <a href="/login" class="btn btn-warning m-auto" style="width: 100%;">Envoyer</a>
                                    </div>
                                </div>

                            {% endblock %}
                    </div>
            </div>

        </div>
    </div>

</div>




{% endblock %}

{% block footer %}

{% endblock %}
